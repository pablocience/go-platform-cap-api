{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2021",
    "outDir": "lib",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@routes/*": ["src/routes/*"],
      "@config/*": ["src/config/*"],
      "@ts/*": ["src/ts/*"],
      "@functions/*": ["src/functions/*"],
      "@models/*": ["src/models/*"],
      "@utils/*": ["src/utils/*"],
      "@libs/*": ["src/libs/*"],
    }
  },
  "include": ["src/**/*.ts", "serverless.ts", "app.ts"],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}